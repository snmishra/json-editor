{
  "tests": "./**/*_test.js",
  "timeout": 30,
  "output": "./output",
  "plugins": {
    "pauseOnFail": {},
    "tryTo": { "enabled": true }
  },
  "helpers": {
    "customHelpers": {
      "require": "./../../config/codeceptjs_helpers.js"
    },
    "Playwright": {
      "browser": "chromium",
      "url": "http://localhost:9100/tests/pages/",
      "show": false,
      "disableScreenshots": false,
      "waitForNavigation": "networkidle0",
      "waitForAction": 500,
      "restart": false
    }
  },
  "include": {
    "I": "./steps_file.js"
  },
  "bootstrap": false,
  "mocha": {},
  "name": "codeceptjs",
  "multiple": {
    "parallel": {
      "chunks": 2
    },
    "basic": {
      "browsers": [
        "firefox",
        {
          "url": "http://localhost:9100/tests/pages/",
          "browser": "firefox",
          "host": "localhost",
          "restart": false
        }
      ]
    }
  }
}
